# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize shrink height 5 px or 5 ppt
        bindsym Up resize grow height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (h) HDMI ON, (y) HDMI OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --auto --right-of LVDS1, mode "default"
    bindsym y exec --no-startup-id xrandr --output HDMI-1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $Locker "bash /home/frederik/work/Programming/scripts/lockscreen.sh && sleep 1" 

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
    
# open common applications

mode "open" {

    bindsym f exec "firefox -not-remote"; mode "default"
    bindsym t exec "thunar"; mode "default"
    bindsym q exec "gnome-calculator"; mode "default"
	bindsym w exec "gedit"; mode "default"
	bindsym m exec --no-startup-id i3-msg 'exec spotify'; mode "default"
    bindsym r exec "rhythmbox"; mode "default"
    bindsym l exec "evince"; mode "default"
    bindsym c exec "emacs26"; mode "default"
	bindsym d exec "inkscape"; mode "default"
    bindsym e mode "execute"
    bindsym p mode "$mode_display"
    bindsym k mode "$mode_system"


    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

